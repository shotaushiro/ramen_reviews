<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Store name</th>
      <th>Menu</th>
      <th>Point</th>
      <th>Content</th>
      <th>Photo</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.user_id %></td>
        <td><%= list.store_name %></td>
        <td><%= list.menu %></td>
        <td><%= list.point %></td>
        <td><%= list.content %></td>
        <td><%= list.photo %></td>
        <td><%= list.location %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

