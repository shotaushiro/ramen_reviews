<% if users.any? %>
  <div class="container">
    <div class="row">
      <% @users.each do |user| %>
        <div class="col-xl-4 col-md-6">
          <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 180 }) %>" alt="">
          <br>
          <br>
          <h5><%= user.name %></h5>
      　　<h6><%= link_to "プロフィールを見る", user_path(user) %></h6>
    　　</div>
      <% end %>
    </div>
  </div>
<%= paginate users %>
<% end %>
